# bilgisayar windows için gerekli
DATABASE_URL="postgresql://postgres@localhost:5432/carhaus?schema=public"

# Server
PORT=3001
NODE_ENV=development
API_PREFIX=api
CORS_ORIGIN=http://localhost:3000

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-in-production
